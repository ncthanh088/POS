@inherits LayoutComponentBase
<main class="flex flex-row flex-wrap border-solid border-gray-400 h-screen">
    <section id="left-panel" class="flex flex-col flex-wrap justify-between p-8 rounded-sm bg-bg-primary h-[100%] 
    sm:w-44 lg:w-1/5 lg:relative lg:left-0 sm:fixed sm:-left-44 sm:z-10">
        <div class="flex flex-col justify-start w-full">
            <HeaderLayout />
            <NavMenu />
        </div>
        <FooterLayout />
    </section>
    <section id="right-panel" class="flex flex-row flex-wrap sm:w-[100%] lg:w-4/5">
        @Body
    </section>
</main>
