    {
        Console.WriteLine("Removing item");
    }

    private void OpenDialog(CartItem item)
    {
        Console.WriteLine("Openinfdfdg diafdflewefdewewfog");
        AppState.SelectedItem = item;
        StateHasChanged();
    }
}