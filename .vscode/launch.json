{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "POS-Service",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/POS.Api/bin/Debug/net8.0/POS.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/POS.Api",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "POS-Agent",
      "type": "coreclr",
      "request": "launch",
      //"cwd": "${workspaceFolder}/src/POS.WebApp",
      "preLaunchTask": "build", // Ensure we don't watch an unbuilt site
      "program": "dotnet",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "args": [
        "watch",
        "--project",
        "${workspaceFolder}/src/POS.WebApp/POS.WebApp.csproj", // Give .csproj file path relative to workspace root
        "--verbose" // Let's us confirm browser connects with hot reload capabilities
      ],
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "POS-Debugger",
      "configurations": [
        "POS-Service",
        "POS-Agent"
      ],
      "stopAll": true
    }
  ]
}